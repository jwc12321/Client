<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@mipmap/splash</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
    <!--登录页忘记密码-->
    <style name="login_forget_number_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/appText4</item>
        <item name="android:textSize">11sp</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="title_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/appText5</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="title_text_right_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/appText5</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">@dimen/common_text_left</item>
    </style>

    <!--首页底部LinearLayout-->
    <style name="bottom_RelativeLayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--首页底部图片-->
    <style name="bottom_imageView_style">
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_width">22dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <!--首页底部文字-->
    <style name="bottom_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/bottom_text_select</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="phone_number_et_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/common_text_left</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">11</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/appText6</item>
        <item name="android:textColorHint">@color/appText6</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="nickname_et_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/common_text_left</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/appText6</item>
        <item name="android:textColorHint">@color/appText6</item>
        <item name="android:textSize">13sp</item>
    </style>
    <!--猜你喜欢的文字-->
    <style name="like_adapter_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/appText6</item>
    </style>

    <style name="PhotoStyle">
        <item name="android:scaleType">fitXY</item>
        <item name="riv_border_width">1dp</item>
        <item name="riv_border_color">@color/appText3</item>
        <item name="riv_corner_radius">1dp</item>
    </style>

    <style name="persion_image_account_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="persion_text_account_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/appText4</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginTop">9dp</item>
    </style>

    <style name="persion_item_fl_style">
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/appText1</item>
        <item name="android:paddingLeft">@dimen/common_margin_left_right</item>
        <item name="android:paddingRight">@dimen/common_margin_left_right</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="persion_item_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/appText4</item>
    </style>

    <style name="title_rl_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:background">@color/appText1</item>
    </style>

    <!--title最左边的返回-->
    <style name="title_left_back_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/common_text_left</item>
        <item name="android:paddingRight">@dimen/common_text_left</item>
        <item name="android:src">@mipmap/return_gray</item>
        <item name="android:background">@null</item>
    </style>
    <!--title最右边图片-->
    <style name="title_right_back_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/common_text_left</item>
        <item name="android:paddingRight">@dimen/common_text_left</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@null</item>
    </style>

    <style name="adapter_screen_choice_iv">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginLeft">@dimen/common_text_left</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="adapter_screen_choice_tt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/common_text_left</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@drawable/bottom_text_select</item>
    </style>

    <style name="fengexian_style">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/backGround2</item>
    </style>

    <style name="SlsStyleDialog" parent="android:Theme.Holo.Light.Dialog">
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="account_detail_left_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/appText6</item>
        <item name="android:layout_marginLeft">@dimen/common_margin_left_right</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="account_detail_right_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/appText4</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/common_margin_left_right</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="go_arrow">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@mipmap/arrow_indicator</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/common_margin_left_right</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="common_ok_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:background">@drawable/login_button_background</item>
        <item name="android:layout_marginLeft">@dimen/common_text_left</item>
        <item name="android:layout_marginRight">@dimen/common_margin_left_right</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/appText1</item>
    </style>

    <style name="setting_rl_style">
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="setting_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/common_text_left</item>
    </style>
    <style name="persional_im_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/appText6</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/common_text_left</item>
    </style>

</resources>
