<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround1">

    <RelativeLayout
        android:id="@+id/title_rel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/appText1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back"
            style="@style/title_left_back_style" />

        <TextView
            android:id="@+id/title"
            style="@style/title_text_style"
            android:text="@string/pay_order" />
    </RelativeLayout>

    <com.purchase.sls.common.widget.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_rel"
        android:fadingEdge="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/photo"
                style="@style/PhotoStyle"
                android:layout_width="@dimen/personal_photo_size"
                android:layout_height="@dimen/personal_photo_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/photo_bottom"
                android:layout_marginTop="@dimen/photo_top"
                app:riv_oval="true"
                tools:background="@null"
                tools:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转账给" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/app_icon" />

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转账金额" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/set_password_et"
                    style="@style/phone_number_et_style"
                    android:layout_height="50dp" />
            </LinearLayout>

            <View style="@style/fengexian_style" />

            <TextView
                android:id="@+id/transfer_to_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/appText3" />

            <RelativeLayout
                android:id="@+id/reel_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:background="@color/appText1">

                <ImageView
                    android:id="@+id/go_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_text_left"
                    android:src="@mipmap/arrow_indicator" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/go_iv"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/reel_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/app_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/reel_iv"
                    android:text="@string/store_cash_reel" />
            </RelativeLayout>

            <View style="@style/fengexian_style" />

            <FrameLayout
                android:id="@+id/item_energy"
                style="@style/persion_item_fl_style">

                <TextView
                    android:id="@+id/energy_number"
                    style="@style/persion_item_text_style"
                    android:drawableLeft="@mipmap/energy"
                    android:drawableStart="@mipmap/energy" />
            </FrameLayout>

            <RelativeLayout
                style="@style/persion_item_fl_style"
                android:layout_marginTop="10dp">

                <TextView
                    style="@style/persion_item_text_style"
                    android:drawableLeft="@mipmap/energy"
                    android:drawableStart="@mipmap/energy"
                    android:text="支付宝" />

                <ImageView
                    android:id="@+id/zhifubao_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_text_left"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pay_select" />
            </RelativeLayout>

            <RelativeLayout style="@style/persion_item_fl_style">

                <TextView
                    style="@style/persion_item_text_style"
                    android:drawableLeft="@mipmap/energy"
                    android:drawableStart="@mipmap/energy"
                    android:text="支付宝" />

                <ImageView
                    android:id="@+id/weixin_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_text_left"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pay_select" />
            </RelativeLayout>
            <TextView
                android:id="@+id/pay_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </com.purchase.sls.common.widget.ReboundScrollView>
    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_button_background"
        android:text="买单"
        android:textColor="@color/appText1"
        android:enabled="false"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>