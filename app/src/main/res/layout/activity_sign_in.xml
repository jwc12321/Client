<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sign_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround3">

    <ImageView
        android:id="@+id/red_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_two_hundred_and_fifty_margin" />

    <TextView
        android:id="@+id/energy_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_three_hundred_and_ninety_margin"
        android:textColor="@color/appText1"
        android:textSize="20sp" />
</RelativeLayout>