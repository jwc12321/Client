<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="@dimen/common_one_hundred_and_ten_margin"
             android:layout_height="@dimen/common_one_hundred_and_ten_margin">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="@dimen/common_ninety_four_margin"
        android:layout_height="@dimen/common_ninety_four_margin"
        android:layout_gravity="center"
        tools:src="@mipmap/portrait_default"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/delete"
        android:layout_gravity="end"
        android:src="@mipmap/delete"
        android:scaleType="center"
        android:layout_width="35dp"
        android:layout_height="35dp" />
</FrameLayout>