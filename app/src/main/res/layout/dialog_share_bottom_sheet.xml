<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/common_sixteen_margin"
        android:text="选择分享方式"
        android:textColor="@color/appText12"
        android:textSize="15sp" />

    <View style="@style/fengexian_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small"
        android:weightSum="3">


        <TextView
            android:id="@+id/wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/umeng_socialize_wechat"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/appText12"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/wechat_circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/umeng_socialize_wxcircle"
            android:gravity="center"
            android:text="微信朋友圈"
            android:textColor="@color/appText12"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/sms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/umeng_socialize_sms"
            android:gravity="center"
            android:text="短信"
            android:textColor="@color/appText12"
            android:textSize="13sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/qq_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/umeng_socialize_qq"
            android:gravity="center"
            android:text="QQ好友"
            android:textColor="@color/appText12"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/qq_zone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/umeng_socialize_qzone"
            android:gravity="center"
            android:text="QQ空间"
            android:textColor="@color/appText12"
            android:textSize="13sp"
            android:visibility="gone"/>
    </LinearLayout>

    <View
       style="@style/fengexian_style"/>
    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_forty_nine_margin"
        android:layout_gravity="center_horizontal"
        android:text="取消"
        android:textColor="@color/appText12"
        android:textSize="15sp"
        android:gravity="center"/>
</LinearLayout>