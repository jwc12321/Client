<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choice_city_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_rel"
        style="@style/title_rl_style">


        <ImageView
            android:id="@+id/back"
            style="@style/title_left_back_style" />

        <TextView
            android:id="@+id/title"
            style="@style/title_text_style"
            android:text="@string/choice_city" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/curr_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/curr_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_fifteen_margin"
                android:textColor="@color/appText5"
                android:textSize="12sp"
                tools:text="衢州" />

            <ImageView
                android:id="@+id/area_select_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_fifteen_margin"
                android:scaleType="fitXY"
                android:src="@drawable/arrow_select" />

            <TextView
                android:id="@+id/switch_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/area_select_iv"
                android:padding="@dimen/common_fifteen_margin"
                android:text="切换县区"
                android:textColor="@color/appText5"
                android:textSize="12sp" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/area_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/curr_ll"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:nestedScrollingEnabled="false"
            android:paddingLeft="@dimen/common_margin_left_right"
            android:paddingRight="@dimen/common_fifteen_margin"
            app:layoutManager="@string/layoutManager_Gridlayout" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_forty_four_margin"
        android:layout_marginLeft="@dimen/common_eleven_margin"
        android:layout_marginRight="@dimen/common_eleven_margin">

        <TextView
            android:id="@+id/currentCityTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="当前城市:"
            android:textColor="@color/appText4"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/currentCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/currentCityTag"
            android:ellipsize="none"
            android:padding="@dimen/common_nine_margin"
            android:singleLine="true"
            android:textColor="@color/appText4"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/common_nine_margin"
            android:text="重新定位" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appText1"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/localCityTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="定位城市"
                android:textColor="@color/appText4"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/localCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/localCityTag"
                android:background="@drawable/bg_draw13"
                android:ellipsize="middle"
                android:gravity="center"
                android:maxLength="4"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:textColor="@color/appText4"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/appText5"
        android:textSize="12sp"
        android:text="热门城市"
        android:layout_marginLeft="@dimen/common_fifteen_margin"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/hot_city_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="@dimen/common_ten_margin"
        android:nestedScrollingEnabled="false"
        android:paddingLeft="@dimen/common_margin_left_right"
        android:paddingRight="@dimen/common_fifteen_margin"
        app:layoutManager="@string/layoutManager_Gridlayout" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/country_lvcountry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:divider="@color/backGround5"
            android:dividerHeight="1px" />

        <TextView
            android:id="@+id/dialog"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_draw15"
            android:gravity="center"
            android:textColor="@color/appText4"
            android:textSize="20sp"
            android:visibility="gone" />

        <com.purchase.sls.common.cityList.style.citylist.sortlistview.SideBar
            android:id="@+id/sidrbar"
            android:layout_width="30.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center" />
    </FrameLayout>
</LinearLayout>