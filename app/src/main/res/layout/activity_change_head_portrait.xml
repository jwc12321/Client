<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/title_rel"
        style="@style/title_rl_style">

        <ImageView
            android:id="@+id/back"
            style="@style/title_left_back_style" />

        <TextView
            android:id="@+id/title"
            style="@style/title_text_style"
            android:text="@string/change_head" />
    </RelativeLayout>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/photo"
        style="@style/PhotoStyle"
        android:layout_width="@dimen/common_three_hundred_margin"
        android:layout_height="@dimen/common_three_hundred_margin"
        android:layout_centerInParent="true"
        app:riv_oval="true"
        tools:background="@null"
        tools:src="@mipmap/app_icon" />
    <Button
        android:id="@+id/change_bt"
        android:layout_width="@dimen/common_two_hundred_margin"
        android:layout_height="@dimen/common_forty_four_margin"
        android:background="@drawable/change_head_bt"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/photo"
        android:layout_marginTop="@dimen/common_twenty_margin"
        android:text="更换头像" />
</RelativeLayout>