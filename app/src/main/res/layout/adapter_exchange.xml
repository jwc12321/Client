<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/go_exchange">

    <ImageView
        android:id="@+id/exchange_iv"
        android:layout_width="@dimen/common_one_hundred_and_sixty_five_margin"
        android:layout_height="@dimen/common_one_hundred_and_sixty_five_margin"
        android:scaleType="fitCenter"
        tools:src="@mipmap/app_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_one_hundred_and_forty_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/appText3"
            android:textSize="14sp"
            tools:text="100"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/appText12"
            android:textSize="14sp"
            tools:text="测试"
            android:layout_marginLeft="@dimen/common_five_margin"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</RelativeLayout>