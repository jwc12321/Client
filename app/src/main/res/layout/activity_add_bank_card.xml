<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround1"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_rel"
        style="@style/title_rl_style">

        <ImageView
            android:id="@+id/back"
            style="@style/title_left_back_style" />

        <TextView
            android:id="@+id/title"
            style="@style/title_text_style"
            android:text="@string/add_bankcard" />
        <TextView
            android:id="@+id/complete"
            style="@style/title_text_right_style"
            android:text="@string/complete"
            android:textColor="@color/appText20"/>
    </RelativeLayout>

    <com.purchase.sls.common.widget.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_twelve_margin"
                android:layout_marginTop="@dimen/common_twenty_margin"
                android:text="@string/input_cardnumber"
                android:textColor="@color/appText6"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_forty_four_margin"
                android:layout_marginTop="@dimen/common_eleven_margin"
                android:background="@color/appText1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_twelve_margin"
                    android:text="@string/card_number"
                    android:textColor="@color/appText5"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/bank_number_et"
                    style="@style/input_bankcard_et_style"
                    android:layout_marginLeft="@dimen/common_one_hundred_margin"
                    android:layout_marginRight="@dimen/common_twelve_margin"
                    android:gravity="center_vertical|right"
                    android:hint="请输入银行卡号" />

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_twelve_margin"
                android:layout_marginTop="@dimen/common_twenty_margin"
                android:text="@string/choice_bank"
                android:textColor="@color/appText6"
                android:textSize="13sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_forty_four_margin"
                android:layout_marginTop="@dimen/common_eleven_margin"
                android:background="@color/appText1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_twelve_margin"
                    android:text="银行"
                    android:textColor="@color/appText5"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/bank_name_et"
                    style="@style/input_bankcard_et_style"
                    android:layout_marginLeft="@dimen/common_one_hundred_margin"
                    android:layout_marginRight="@dimen/common_twelve_margin"
                    android:gravity="center_vertical|right"
                    android:hint="请填写所属银行" />

                <View
                    style="@style/st_line_style"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_forty_four_margin"
                android:background="@color/appText1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_twelve_margin"
                    android:text="支行地址"
                    android:textColor="@color/appText5"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/bank_subbranch_name_et"
                    style="@style/input_bankcard_et_style"
                    android:layout_marginLeft="@dimen/common_one_hundred_margin"
                    android:layout_marginRight="@dimen/common_twelve_margin"
                    android:gravity="center_vertical|right"
                    android:hint="请输入开户支行" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_twelve_margin"
                android:layout_marginTop="@dimen/common_twenty_margin"
                android:text="@string/user_im"
                android:textColor="@color/appText6"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_forty_four_margin"
                android:layout_marginTop="@dimen/common_eleven_margin"
                android:background="@color/appText1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_twelve_margin"
                    android:text="手机号"
                    android:textColor="@color/appText5"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/mobile_et"
                    style="@style/input_bankcard_et_style"
                    android:layout_marginLeft="@dimen/common_one_hundred_margin"
                    android:layout_marginRight="@dimen/common_twelve_margin"
                    android:gravity="center_vertical|right"
                    android:hint="请输入银行预留手机号" />

                <View
                    style="@style/st_line_style"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_forty_four_margin"
                android:background="@color/appText1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_twelve_margin"
                    android:text="@string/bankcard_name"
                    android:textColor="@color/appText5"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/owner_name_et"
                    style="@style/input_bankcard_et_style"
                    android:layout_marginLeft="@dimen/common_one_hundred_margin"
                    android:layout_marginRight="@dimen/common_twelve_margin"
                    android:gravity="center_vertical|right"
                    android:hint="请输入银行预留姓名" />

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_twelve_margin"
                android:layout_marginTop="@dimen/common_eleven_margin"
                android:text="@string/information_encryption"
                android:textColor="@color/appText6"
                android:textSize="13sp" />
        </LinearLayout>
    </com.purchase.sls.common.widget.ReboundScrollView>
</LinearLayout>