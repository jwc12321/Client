<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:myrating="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/people_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/common_margin_left_right"
        android:layout_marginLeft="@dimen/common_text_left"
        android:layout_marginTop="@dimen/common_margin_left_right"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/people_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/people_icon" />

    <com.purchase.sls.common.widget.MyRatingBar
        android:layout_toRightOf="@id/people_icon"
        android:layout_below="@id/people_name"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:id="@+id/rating_bar"
        myrating:mImageWidth="10dp"
        myrating:mImageHeight="10dp"
        myrating:mClickImageId="@mipmap/star"
        myrating:mDefaultImageId="@mipmap/star2"
        myrating:mHalfImageId="@mipmap/star3"
        myrating:mMargin="1px"
        myrating:mStarChoose="0"
        myrating:mStarNum="5"
        myrating:mScope="2.3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/people_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="fdfd" />
    <View
        style="@style/fengexian_style"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>