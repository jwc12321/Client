<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appText1">

    <RelativeLayout
        android:id="@+id/title_rel"
        style="@style/title_rl_style">

        <TextView
            android:id="@+id/title"
            style="@style/title_text_style"
            android:text="@string/energy_center" />

        <ImageView
            android:id="@+id/share"
            style="@style/title_right_back_style"
            android:src="@mipmap/share_icon" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:layout_below="@id/title_rel"
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appText1"
        app:tabIndicatorColor="@color/appText3"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/appText3" />

    <RelativeLayout
        android:id="@+id/sign_rl"
        android:layout_below="@id/indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_two_hundred_and_fifty_margin"
        android:background="@mipmap/welfare_icon">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/common_twenty_seven_margin"
            android:textColor="@color/appText1"
            tools:text="哈哈哈" />

        <ImageView
            android:id="@+id/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/common_six_margin"
            android:src="@mipmap/sign_in_icon" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:layout_below="@id/sign_rl"
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backGround1" />
    <ImageView
        android:id="@+id/red_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"/>
</RelativeLayout>