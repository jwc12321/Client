<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_fifteen_margin"
        android:textColor="@color/appText15"
        android:textSize="15sp"
        tools:text="2018-05-20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_fifteen_margin"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/spike_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/appText3"
            android:textSize="23sp"
            tools:text="100" />

        <TextView
            android:id="@+id/spike_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_five_margin"
            android:textColor="@color/appText12"
            android:textSize="14sp"
            tools:text="测试商品" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_one_hundred_and_forty_margin"
        android:layout_margin="@dimen/common_fifteen_margin">

        <ImageView
            android:id="@+id/spike_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/go_spike"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_sixty_margin"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/common_twelve_margin"
            android:background="@mipmap/spike_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/common_ten_margin"
                android:layout_marginRight="@dimen/common_ten_margin"
                android:layout_marginTop="@dimen/common_ten_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/original_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原价:"
                    android:textColor="@color/appText16"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/appText16"
                    android:textSize="11sp"
                    tools:text="1344" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/common_ten_margin"
                android:text="我要抽奖"
                android:textColor="@color/appText3"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        style="@style/fengexian_style"
        android:layout_marginLeft="@dimen/common_ten_margin"
        android:layout_marginRight="@dimen/common_ten_margin" />
</LinearLayout>