<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround1"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_rel"
        style="@style/title_rl_style">

        <ImageView
            android:id="@+id/back"
            style="@style/title_left_back_style" />

        <TextView
            android:id="@+id/title"
            style="@style/title_text_style"
            android:text="@string/account_detail" />
    </RelativeLayout>

    <com.purchase.sls.common.widget.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_rel"
        android:layout_marginTop="1dp"
        android:fadingEdge="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appText1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/photo"
                    style="@style/PhotoStyle"
                    android:layout_width="@dimen/account_list_photo"
                    android:layout_height="@dimen/account_list_photo"
                    app:riv_oval="true"
                    tools:background="@null"
                    tools:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/business_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/common_text_left" />
            </LinearLayout>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/trading_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/account_detail_height">

                <TextView
                    style="@style/account_detail_left_tv"
                    android:text="@string/payment_method" />

                <TextView
                    android:id="@+id/payment_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/go_arrow" />

                <ImageView
                    android:id="@+id/go_arrow"
                    style="@style/go_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/account_detail_height">

                <TextView
                    style="@style/account_detail_left_tv"
                    android:text="@string/commodity_description" />

                <TextView
                    android:id="@+id/commodity_description"
                    style="@style/account_detail_right_tv" />
            </RelativeLayout>

            <View style="@style/fengexian_style" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/account_detail_height">

                <TextView
                    style="@style/account_detail_left_tv"
                    android:text="@string/created_at" />

                <TextView
                    android:id="@+id/created_at"
                    style="@style/account_detail_right_tv" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/account_detail_height">

                <TextView
                    style="@style/account_detail_left_tv"
                    android:text="@string/order_number" />

                <TextView
                    android:id="@+id/order_number"
                    style="@style/account_detail_right_tv" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/account_detail_height">

                <TextView
                    style="@style/account_detail_left_tv"
                    android:text="@string/merchant_order_number" />

                <TextView
                    android:id="@+id/merchant_order_number"
                    style="@style/account_detail_right_tv" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/backGround1" />

            <RelativeLayout
                android:id="@+id/go_recode_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height">

                <TextView
                    style="@style/account_detail_left_tv"
                    android:text="@string/see_intercourse_record" />

                <ImageView style="@style/go_arrow" />
            </RelativeLayout>
        </LinearLayout>
    </com.purchase.sls.common.widget.ReboundScrollView>
</LinearLayout>