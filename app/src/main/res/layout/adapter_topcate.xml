<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hot_item_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backGround3"
    android:gravity="center"
    android:orientation="vertical">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/common_fifty_margin"
        android:layout_height="@dimen/common_fifty_margin"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        app:riv_border_color="@color/appText1"
        app:riv_border_width="3dp"
        app:riv_corner_radius="1dp"
        app:riv_oval="true"
        tools:background="@null"
        tools:src="@mipmap/head_photo_icon" />


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/appText6"
        android:textSize="12sp"
        tools:text="水果"/>
</LinearLayout>
